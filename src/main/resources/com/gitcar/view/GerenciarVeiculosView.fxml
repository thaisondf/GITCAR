<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="676.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gitcar.app.controladores.GerenciarVeiculosControlador">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <children>
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="txtBusca" promptText="Buscar por ID, Modelo, Marca ou Placa" HBox.hgrow="ALWAYS" />
                        <Button onAction="#acaoBuscar" text="Buscar" />
                    </children>
                </HBox>
                <TableView fx:id="tabelaVeiculos" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="82.0" text="ID" />
                        <TableColumn fx:id="colModelo" prefWidth="131.0" text="Modelo" />
                        <TableColumn fx:id="colMarca" prefWidth="106.0" text="Marca" />
                        <TableColumn fx:id="colAno" prefWidth="98.0" text="Ano" />
                        <TableColumn fx:id="colPlaca" prefWidth="109.0" text="Placa" />
                        <TableColumn fx:id="colStatus" prefWidth="129.0" text="Status" />
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <children>
                        <Button onAction="#acaoEditar" text="Editar" />
                        <Button onAction="#acaoExcluir" text="Excluir" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
